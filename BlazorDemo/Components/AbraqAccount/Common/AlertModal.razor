
@if (IsVisible)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show" style="display: block;" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header @HeaderClass">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="btn-close" @onclick="Close" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p style="white-space: pre-wrap;">@Message</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn @ButtonClass" @onclick="Close">@ButtonText</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public string Title { get; set; } = "Message";
    [Parameter] public string Message { get; set; } = "";
    [Parameter] public string ButtonText { get; set; } = "OK";
    [Parameter] public string ButtonClass { get; set; } = "btn-primary";
    [Parameter] public string HeaderClass { get; set; } = "";
    
    [Parameter] public EventCallback OnClose { get; set; }

    public bool IsVisible { get; private set; }

    public void Show(string message, string title = "Message", MessageType type = MessageType.Info)
    {
        Message = message;
        Title = title;
        
        // Set styling based on message type
        switch (type)
        {
            case MessageType.Success:
                ButtonClass = "btn-success";
                HeaderClass = "bg-success text-white";
                if (string.IsNullOrEmpty(title) || title == "Message") Title = "Success";
                break;
            case MessageType.Error:
                ButtonClass = "btn-danger";
                HeaderClass = "bg-danger text-white";
                if (string.IsNullOrEmpty(title) || title == "Message") Title = "Error";
                break;
            case MessageType.Warning:
                ButtonClass = "btn-warning";
                HeaderClass = "bg-warning text-dark";
                if (string.IsNullOrEmpty(title) || title == "Message") Title = "Warning";
                break;
            default:
                ButtonClass = "btn-primary";
                HeaderClass = "bg-primary text-white";
                if (string.IsNullOrEmpty(title) || title == "Message") Title = "Information";
                break;
        }
        
        IsVisible = true;
        StateHasChanged();
    }

    public void Hide()
    {
        IsVisible = false;
        StateHasChanged();
    }

    private async Task Close()
    {
        await OnClose.InvokeAsync();
        Hide();
    }

    public enum MessageType
    {
        Info,
        Success,
        Warning,
        Error
    }
}
