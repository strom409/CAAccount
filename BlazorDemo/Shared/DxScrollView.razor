@using DevExpress.Blazor.Internal

<DxScrollViewer CssClass="@($"{CssClass} blazor-scroll-view")" VisibleElementSelector="@VisibleElementSelector" VisibleElementVerticalAlign="@VerticalAlign.Top">
    @ChildContent
</DxScrollViewer>

@code {
    [Parameter]
    public string VisibleElementSelector { get; set; }
    [Parameter]
    public string CssClass { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
