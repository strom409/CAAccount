@page "/abraq/reports/balance-sheet"
@using BlazorDemo.AbraqAccount.Models
@using BlazorDemo.AbraqAccount.Services.Interfaces
@inject IReportService ReportService

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Balance Sheet</h2>
        <div class="actions">
            <div class="input-group input-group-sm">
                <span class="input-group-text">As Of Date</span>
                <input type="date" @bind="asOfDate" class="form-control" />
                <button class="btn btn-primary" @onclick="LoadReport">View</button>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (reportData == null)
    {
        <div class="alert alert-info">Enter a date and click View to see the statement.</div>
    }
    else
    {
        <div class="row g-4">
            <!-- LIABILITIES SIDE -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">LIABILITIES & EQUITY</h5>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-hover mb-0">
                            <tbody>
                                @foreach (var group in reportData.Liabilities)
                                {
                                    <tr class="table-light">
                                        <td colspan="2" class="fw-bold">@group.GroupName</td>
                                    </tr>
                                    @foreach (var acc in group.Accounts)
                                    {
                                        <tr>
                                            <td class="ps-4">@acc.AccountName</td>
                                            <td class="text-end">@acc.Amount.ToString("N2")</td>
                                        </tr>
                                    }
                                    <tr class="fw-bold">
                                        <td class="text-end">Sub-Total:</td>
                                        <td class="text-end border-top">@group.TotalAmount.ToString("N2")</td>
                                    </tr>
                                }
                                
                                <tr class="table-warning fw-bold">
                                    <td>NET PROFIT / (LOSS)</td>
                                    <td class="text-end">@reportData.NetProfitLoss.ToString("N2")</td>
                                </tr>
                            </tbody>
                            <tfoot class="table-dark">
                                <tr class="fw-bold h5">
                                    <td>TOTAL LIABILITIES</td>
                                    <td class="text-end text-warning">@reportData.TotalLiabilitiesAndEquity.ToString("N2")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- ASSETS SIDE -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">ASSETS</h5>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-hover mb-0">
                            <tbody>
                                @foreach (var group in reportData.Assets)
                                {
                                    <tr class="table-light">
                                        <td colspan="2" class="fw-bold">@group.GroupName</td>
                                    </tr>
                                    @foreach (var acc in group.Accounts)
                                    {
                                        <tr>
                                            <td class="ps-4">@acc.AccountName</td>
                                            <td class="text-end">@acc.Amount.ToString("N2")</td>
                                        </tr>
                                    }
                                    <tr class="fw-bold">
                                        <td class="text-end">Sub-Total:</td>
                                        <td class="text-end border-top">@group.TotalAmount.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-dark">
                                <tr class="fw-bold h5">
                                    <td>TOTAL ASSETS</td>
                                    <td class="text-end text-info">@reportData.TotalAssets.ToString("N2")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .card { border-radius: 12px; overflow: hidden; }
    .table td { vertical-align: middle; }
</style>

@code {
    private BalanceSheetViewModel? reportData;
    private bool isLoading;
    private DateTime asOfDate = DateTime.Now;

    protected override async Task OnInitializedAsync()
    {
        await LoadReport();
    }

    private async Task LoadReport()
    {
        isLoading = true;
        reportData = await ReportService.GetBalanceSheetAsync(asOfDate);
        isLoading = false;
    }
}
