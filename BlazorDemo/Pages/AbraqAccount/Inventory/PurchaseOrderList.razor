    .btn-warning { background-color: #ffc107; color: #000; }
    .btn-warning:hover { background-color: #e0a800; }
</style>

@code {
    private List<PurchaseOrder>? orders;
    private string? poNumber;
    private string? vendorName;
    private string? status;
    private string? purchaseStatus;
    private DateTime? fromDate;
    private DateTime? toDate;

    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages;
    private int totalCount;

    // Modal state
    private bool showConfirmModal = false;
    private string confirmTitle = "";
    private string confirmMessage = "";
    private string confirmHeaderClass = "";
    private string confirmIconClass = "";
    private string confirmButtonClass = "";
    private string pendingAction = "";
    private int selectedId;
    private string currentUser = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var session = _httpContextAccessor.HttpContext?.Session;
            if (session != null)
            {
                currentUser = session.GetString("Username") ?? "";
            }
        }
        catch { }
        await LoadOrders();
    }

    private async Task LoadOrders()
    {
        var result = await POService.GetPurchaseOrdersAsync(poNumber, vendorName, status, purchaseStatus, fromDate, toDate, currentPage, pageSize);
        orders = result.orders;
        totalCount = result.totalCount;
        totalPages = result.totalPages;
    }

    private async Task Search()
    {
        currentPage = 1;
        await LoadOrders();
    }

    private async Task ClearFilters()
    {
        poNumber = null;
        vendorName = null;
        status = null;
        purchaseStatus = null;
        fromDate = null;
        toDate = null;
        await Search();
    }

    private async Task GoToPage(int page)
    {
        currentPage = page;
        await LoadOrders();
    }

    private void Approve(int id)
    {
        selectedId = id;
        pendingAction = "Approve";
        confirmTitle = "Confirm Approval";
        confirmMessage = "Are you sure you want to approve this purchase order?";
        confirmHeaderClass = "bg-success";
        confirmIconClass = "bi bi-hand-thumbs-up";
        confirmButtonClass = "btn-success";
        showConfirmModal = true;
    }

    private void Unapprove(int id)
    {
        selectedId = id;
        pendingAction = "Unapprove";
        confirmTitle = "Confirm Unapproval";
        confirmMessage = "Are you sure you want to unapprove this purchase order?";
        confirmHeaderClass = "bg-warning";
        confirmIconClass = "bi bi-hand-thumbs-down";
        confirmButtonClass = "btn-warning";
        showConfirmModal = true;
    }

    private void Delete(int id)
    {
        selectedId = id;
        pendingAction = "Delete";
        confirmTitle = "Confirm Delete";
        confirmMessage = "Are you sure you want to delete this purchase order? This action cannot be undone.";
        confirmHeaderClass = "bg-danger";
        confirmIconClass = "bi bi-trash";
        confirmButtonClass = "btn-danger";
        showConfirmModal = true;
    }

    private async Task HandleConfirmAction()
    {
        bool result = false;
        string message = "";

        if (pendingAction == "Approve")
        {
            result = await POService.ApprovePurchaseOrderAsync(selectedId);
            message = "Purchase Order approved successfully!";
        }
        else if (pendingAction == "Unapprove")
        {
            result = await POService.UnapprovePurchaseOrderAsync(selectedId);
            message = "Purchase Order unapproved successfully!";
        }
        else if (pendingAction == "Delete")
        {
            result = await POService.DeletePurchaseOrderAsync(selectedId);
            message = "Purchase Order deleted successfully!";
        }
        if (result)
        {
            if (!string.IsNullOrEmpty(message)) NotificationService.ShowSuccess(message);
            await LoadOrders();
        }
        
        CloseConfirmModal();
    }

    private void CloseConfirmModal()
    {
        showConfirmModal = false;
        pendingAction = "";
    }

    private void CreateNew() => Navigation.NavigateTo("/abraq/inventory/purchase-orders/create");
    private void Edit(int id) => Navigation.NavigateTo($"/abraq/inventory/purchase-orders/edit/{id}");
    private void View(int id) => Navigation.NavigateTo($"/abraq/inventory/purchase-orders/view/{id}");
}