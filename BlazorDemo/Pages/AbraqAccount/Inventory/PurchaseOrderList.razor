@page "/abraq/inventory/purchase-orders"
@using BlazorDemo.AbraqAccount.Models
@using BlazorDemo.AbraqAccount.Services.Interfaces
@using Microsoft.AspNetCore.Http
@inject IPurchaseOrderService POService
@inject NavigationManager Navigation
@inject INotificationService NotificationService
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor _httpContextAccessor
@layout MainLayout

<div class="expense-list-container">
    <div class="expense-header">
        <div class="expense-title-section">
            <h1>Purchase Order <small class="subtitle" style="color: #999; font-size: 0.9rem; font-weight: normal;">Control panel</small></h1>
        </div>
        <div style="display: flex; gap: 0.5rem; align-items: center;">
            <div class="breadcrumbs-top">
                <i class="bi bi-house"></i> Home <span>&gt;</span> Purchase Order
            </div>
            <button type="button" class="add-button" @onclick="CreateNew" title="Create New Purchase Order">
                <i class="bi bi-plus-lg"></i>
            </button>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="filter-card card shadow-sm border-0 mb-4">
        <div class="card-body p-4">
            <div class="row gx-3 gy-3">
                <div class="col-lg-2 col-md-4">
                    <label class="filter-label">PO Number</label>
                    <input type="text" class="form-control-custom" placeholder="PO Number" @bind="poNumber" />
                </div>
                <div class="col-lg-2 col-md-4">
                    <label class="filter-label">Vendor Name</label>
                    <input type="text" class="form-control-custom" placeholder="Search Vendor" @bind="vendorName" />
                </div>
                <div class="col-lg-2 col-md-4">
                    <label class="filter-label">Status</label>
                    <select class="form-control-custom" @bind="status">
                        <option value="">All Status</option>
                        <option value="UnApproved">UnApproved</option>
                        <option value="Approved">Approved</option>
                    </select>
                </div>
                <div class="col-lg-2 col-md-4">
                    <label class="filter-label">Purchase Status</label>
                    <select class="form-control-custom" @bind="purchaseStatus">
                        <option value="">All</option>
                        <option value="Purchase Pending">Purchase Pending</option>
                        <option value="Purchase Received">Purchase Received</option>
                    </select>
                </div>
                <div class="col-lg-2 col-md-3">
                    <label class="filter-label">From Date</label>
                    <input type="date" class="form-control-custom" @bind="fromDate" />
                </div>
                <div class="col-lg-1 col-md-3">
                    <label class="filter-label">To Date</label>
                    <input type="date" class="form-control-custom" @bind="toDate" />
                </div>
                <div class="col-lg-1 col-md-2 d-flex align-items-end gap-1">
                    <button class="btn btn-search-custom" @onclick="Search" title="Search">
                        <i class="bi bi-search"></i>
                    </button>
                    <button class="btn btn-clear-custom" @onclick="ClearFilters" title="Clear Filters">
                        <i class="bi bi-eraser"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- List Section -->
    <div class="list-header-bar">
        <h3>Purchase Order <small style="color: #999; font-weight: normal; font-size: 0.9rem;">- List</small></h3>
    </div>
    <div class="table-card">
            <div class="table-responsive">
                <table class="table table-custom table-hover m-0">
                    <thead>
                        <tr>
                            <th>PO Number <i class="bi bi-chevron-expand small text-muted"></i></th>
                            <th>PO Date <i class="bi bi-chevron-expand small text-muted"></i></th>
                            <th>Vendor <i class="bi bi-chevron-expand small text-muted"></i></th>
                            <th>PO Type <i class="bi bi-chevron-expand small text-muted"></i></th>
                            <th class="text-end">Qty <i class="bi bi-chevron-expand small text-muted"></i></th>
                            <th class="text-end">Amount <i class="bi bi-chevron-expand small text-muted"></i></th>
                            <th class="text-end">Tax <i class="bi bi-chevron-expand small text-muted"></i></th>
                            <th class="text-end">Total <i class="bi bi-chevron-expand small text-muted"></i></th>
                            <th>Status <i class="bi bi-chevron-expand small text-muted"></i></th>
                            <th>Purchase Status <i class="bi bi-chevron-expand small text-muted"></i></th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (orders == null)
                        {
                            <tr><td colspan="11" class="text-center py-5"><div class="spinner-border text-primary spinner-border-sm"></div> Loading...</td></tr>
                        }
                        else if (!orders.Any())
                        {
                            <tr><td colspan="11" class="text-center py-5 text-muted">No purchase orders found.</td></tr>
                        }
                        else
                        {
                            @foreach (var order in orders)
                            {
                                <tr>
                                    <td><span class="fw-medium text-primary cursor-pointer" @onclick="() => View(order.Id)">@order.PONumber</span></td>
                                    <td>@order.PODate.ToString("dd-MM-yyyy")</td>
                                    <td>@(order.Vendor?.AccountName ?? "N/A")</td>
                                    <td>@order.POType</td>
                                    <td class="text-end">@order.POQty.ToString("N0")</td>
                                    <td class="text-end">@order.Amount.ToString("N2")</td>
                                    <td class="text-end">@order.TaxAmount.ToString("N2")</td>
                                    <td class="text-end fw-bold">@order.TotalAmount.ToString("N2")</td>
                                    <td>
                                        <span class="status-badge @(order.Status == "Approved" ? "approved" : "unapproved")">
                                            @order.Status
                                        </span>
                                    </td>
                                    <td>
                                        <span class="status-badge @(order.PurchaseStatus == "Purchase Received" ? "received" : "pending")">
                                            @order.PurchaseStatus
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center gap-2">
                                            @if (order.Status != "Approved")
                                            {
                                                <button class="btn btn-action-icon text-success" title="Approve" @onclick="() => Approve(order.Id)"><i class="bi bi-hand-thumbs-up"></i></button>
                                                <button class="btn btn-action-icon" title="Edit" @onclick="() => Edit(order.Id)"><i class="bi bi-pencil-square"></i></button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-action-icon text-warning" title="Unapprove" @onclick="() => Unapprove(order.Id)"><i class="bi bi-hand-thumbs-down"></i></button>
                                            }
                                            <button class="btn btn-action-icon" title="View" @onclick="() => View(order.Id)"><i class="bi bi-eye"></i></button>
                                            @if (order.Status != "Approved")
                                            {
                                                <button class="btn btn-action-icon text-danger" title="Delete" @onclick="() => Delete(order.Id)"><i class="bi bi-trash"></i></button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            @if (totalPages > 1)
            {
                <div class="card-footer bg-white border-0 py-3">
                    <nav>
                        <ul class="pagination pagination-sm justify-content-end mb-0">
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="() => GoToPage(currentPage - 1)">Previous</button>
                            </li>
                            @for (int i = 1; i <= totalPages; i++)
                            {
                                var pageNum = i;
                                <li class="page-item @(currentPage == pageNum ? "active" : "")">
                                    <button class="page-link" @onclick="() => GoToPage(pageNum)">@pageNum</button>
                                </li>
                            }
                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <button class="page-link" @onclick="() => GoToPage(currentPage + 1)">Next</button>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        </div>
    </div>


    <!-- Confirmation Modal -->
    @if (showConfirmModal)
    {
        <div class="modal-overlay show">
            <div class="confirm-modal">
                <div class="modal-header @confirmHeaderClass">
                    <h3><i class="@confirmIconClass me-2"></i> @confirmTitle</h3>
                    <button type="button" class="modal-close" @onclick="CloseConfirmModal">&times;</button>
                </div>
                <div class="modal-body">
                    <p>@confirmMessage</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary px-4" @onclick="CloseConfirmModal">Cancel</button>
                    <button type="button" class="btn @confirmButtonClass px-4" @onclick="HandleConfirmAction">Confirm</button>
                </div>
            </div>
        </div>
    }

<style>
