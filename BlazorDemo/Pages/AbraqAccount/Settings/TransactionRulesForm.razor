@page "/abraq/settings/transaction-rules/create"
@page "/abraq/settings/transaction-rules/edit/{Id:int}"
@using BlazorDemo.AbraqAccount.Models
@using BlazorDemo.AbraqAccount.Services.Interfaces
@inject ISettingsService SettingsService
@inject NavigationManager Navigation

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h3 class="mb-0">@(IsEdit ? "Edit" : "New") Transaction Rule</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">@errorMessage</div>
                    }

                    <EditForm Model="model" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Account Type</label>
                                <select @onchange="OnAccountTypeChanged" class="form-select" value="@model.AccountType">
                                    <option value="">-- Select Type --</option>
                                    <option value="MasterGroup">Master Group</option>
                                    <option value="MasterSubGroup">Master Sub Group</option>
                                    <option value="SubGroupLedger">Sub Group Ledger</option>
                                    <option value="BankMaster">Bank Master</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Account</label>
                                <select @bind="model.AccountId" class="form-select">
                                    <option value="0">-- Select Account --</option>
                                    @if (availableAccounts != null)
                                    {
                                        @foreach (var acc in availableAccounts)
                                        {
                                            <option value="@acc.Id">@acc.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="row g-3 mt-2">
                            <div class="col-md-6">
                                <label class="form-label">Rule Type</label>
                                <select @bind="model.RuleType" class="form-select">
                                    <option value="AllowedNature">Allowed Nature</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Allowed Nature</label>
                                <select @bind="model.Value" class="form-select">
                                    <option value="Both">Both (Debit/Credit)</option>
                                    <option value="Debit">Debit Only</option>
                                    <option value="Credit">Credit Only</option>
                                </select>
                            </div>
                        </div>

                        <div class="mt-3">
                            <label class="form-label">Entry Profile (Optional)</label>
                            <select @bind="model.EntryAccountId" class="form-select">
                                <option value="">-- All Profiles --</option>
                                @if (entryForAccounts != null)
                                {
                                    @foreach (var ef in entryForAccounts)
                                    {
                                        var displayName = string.IsNullOrWhiteSpace(ef.AccountName) || ef.AccountName.Trim().ToLower() == "null"
                                            ? $"{ef.TransactionType}/{ef.TransactionType}"
                                            : $"{ef.TransactionType} - {ef.AccountName}";
                                        <option value="@ef.Id">@displayName</option>
                                    }
                                }
                            </select>
                            <div class="form-text">Apply this rule ONLY when this profile is selected in transaction form.</div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm" role="status"></span>
                                }
                                Save Rule
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int? Id { get; set; }
    private AccountRule model = new() { RuleType = "AllowedNature", Value = "Both" };
    private IEnumerable<LookupItem>? availableAccounts;
    private List<EntryForAccount>? entryForAccounts;
    private bool IsEdit => Id.HasValue;
    private bool isSubmitting;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        entryForAccounts = await SettingsService.GetFormattedEntryProfilesAsync("Global");

        if (IsEdit)
        {
            var rule = await SettingsService.GetAccountRuleByIdAsync(Id!.Value);
            if (rule != null)
            {
                model = rule;
                await LoadAccounts();
            }
            else Navigation.NavigateTo("/settings/transaction-rules");
        }
    }

    private async Task OnAccountTypeChanged(ChangeEventArgs e)
    {
        model.AccountType = e.Value?.ToString() ?? "";
        model.AccountId = 0;
        await LoadAccounts();
    }

    private async Task LoadAccounts()
    {
        if (!string.IsNullOrEmpty(model.AccountType))
        {
            availableAccounts = await SettingsService.GetAvailableAccountsForRulesAsync(model.AccountType);
        }
        else
        {
            availableAccounts = null;
        }
    }

    private async Task HandleSubmit()
    {
        if (model.AccountId == 0) { errorMessage = "Account is required."; return; }

        isSubmitting = true;
        errorMessage = null;

        var result = IsEdit 
            ? await SettingsService.UpdateAccountRuleAsync(Id!.Value, model)
            : await SettingsService.CreateAccountRuleAsync(model);

        if (result.success) Navigation.NavigateTo("/settings/transaction-rules");
        else errorMessage = result.message;

        isSubmitting = false;
    }

    private void Cancel() => Navigation.NavigateTo("/settings/transaction-rules");
}
