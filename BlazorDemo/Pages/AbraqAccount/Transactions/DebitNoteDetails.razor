@page "/abraq/transactions/debit-note/details/{Id:int}"
@using BlazorDemo.Pages.AbraqAccount.Transactions.SubComponents
@using BlazorDemo.AbraqAccount.Services.Interfaces
@inject IDebitNoteService DebitNoteService

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            @if (voucherNo != null)
            {
                <DebitNoteForm VoucherNo="@voucherNo" IsReadOnly="true" />
            }
            else if (notFound)
            {
                <div class="alert alert-warning">Debit Note not found.</div>
            }
            else
            {
                <div class="text-center">Loading...</div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }
    private string? voucherNo;
    private bool notFound;

    protected override async Task OnInitializedAsync()
    {
        var note = await DebitNoteService.GetDebitNoteByIdAsync(Id);
        if (note != null)
        {
            voucherNo = note.DebitNoteNo;
        }
        else
        {
            notFound = true;
        }
    }
}
