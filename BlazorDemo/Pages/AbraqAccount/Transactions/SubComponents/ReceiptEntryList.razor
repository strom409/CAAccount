</style>


<ConfirmationModal @ref="confirmationModal" OnConfirm="HandleConfirmation" />
<TransactionHistoryModal @ref="historyModal" />

@code {
    [Parameter] public EventCallback<string> OnEdit { get; set; }
    private List<ReceiptEntryGroupViewModel>? receiptGroups;
    private List<string> units = new();
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling((double)totalCount / pageSize);
    private int startRecord => (currentPage - 1) * pageSize + 1;
    private int endRecord => Math.Min(currentPage * pageSize, totalCount);

    private ReceiptFilter filter = new() { Status = "Unapproved" };

    protected override async Task OnInitializedAsync()
    {
        units = (await ReceiptEntryService.GetUnitNamesAsync()).ToList();
        await LoadData();
    }

    private void FilterLocalData()
    {
        if (originalReceiptGroups == null) return;
        
        var query = originalReceiptGroups.AsEnumerable();

        foreach(var kvp in activeColumnFilters)
        {
             var col = kvp.Key;
             var filterValues = kvp.Value as System.Collections.IEnumerable;
             if (filterValues == null) continue;
             
             query = query.Where(item => {
                 object? val = col switch {
                     "Unit" => item.Unit,
                     "VoucherNo" => item.VoucherNo,
                     "Date" => item.ReceiptDate.ToString("dd/MM/yyyy"),
                     "EntryForName" => item.EntryForName ?? "-",
                     "Account" => item.CreditAccountName + " " + item.DebitAccountName,
                     "ReceiptAmount" => item.ReceiptAmount,
                     _ => null
                 };
                 
                 foreach(var f in filterValues) {
                     if (object.Equals(f, val)) return true;
                 }
                 return false;
             });
        }
        
        receiptGroups = query.ToList();
    }

    private Dictionary<string, object> activeColumnFilters = new();

    private void HandleColumnFilter<T>(string column, List<T> selectedValues)
    {
        if (selectedValues == null || !selectedValues.Any()) 
            activeColumnFilters.Remove(column);
        else 
            activeColumnFilters[column] = selectedValues;

        FilterLocalData();
    }

    private List<ReceiptEntryGroupViewModel> originalReceiptGroups = new();

    private async Task LoadData()
    {
        var result = await ReceiptEntryService.GetReceiptEntriesAsync(
            filter.VoucherNo,
            null, // growerGroup
            null, // growerName
            filter.Unit,
            filter.Status,
            filter.FromDate,
            filter.ToDate,
            currentPage,
            pageSize
        );
        originalReceiptGroups = result.groups ?? new List<ReceiptEntryGroupViewModel>();
        receiptGroups = originalReceiptGroups.ToList();
        totalCount = result.totalCount;
        
        if (activeColumnFilters.Any()) FilterLocalData();
    }

    private async Task ClearFilters()
    {
        filter = new() { Status = "Unapproved" };
        currentPage = 1;
        await LoadData();
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            currentPage = page;
            await LoadData();
        }
    }

    private async Task OnPageChange(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int page))
        {
            await GoToPage(page);
        }
    }

    private async Task ShowDetails(string voucherNo)
    {
        // Implement modal or navigation
    }

    private async Task ShowHistory(string voucherNo)
    {
        if (historyModal != null) await historyModal.Show(voucherNo);
    }

    private TransactionHistoryModal? historyModal;

    private ConfirmationModal? confirmationModal;
    private int pendingCreditId;
    private int pendingDebitId;
    private string pendingAction = "";

    private void ConfirmApprove(int creditId, int debitId)
    {
        pendingCreditId = creditId;
        pendingDebitId = debitId;
        pendingAction = "Approve";
        confirmationModal?.Show("Approve Receipt", "Are you sure you want to approve this receipt?", "Approve", "btn-success");
    }

    private void ConfirmUnapprove(int creditId, int debitId)
    {
        pendingCreditId = creditId;
        pendingDebitId = debitId;
        pendingAction = "Unapprove";
        confirmationModal?.Show("Unapprove Receipt", "Are you sure you want to unapprove this receipt?", "Unapprove", "btn-warning");
    }

    private void ConfirmDelete(int creditId, int debitId)
    {
        pendingCreditId = creditId;
        pendingDebitId = debitId;
        pendingAction = "Delete";
        confirmationModal?.Show("Delete Receipt", "Are you sure you want to delete this receipt?", "Delete", "btn-danger");
    }

    private async Task HandleConfirmation()
    {
        if (pendingAction == "Approve")
        {
             if (pendingCreditId > 0) await ReceiptEntryService.ApproveReceiptEntryAsync(pendingCreditId);
             if (pendingDebitId > 0) await ReceiptEntryService.ApproveReceiptEntryAsync(pendingDebitId);
        }
        else if (pendingAction == "Unapprove")
        {
            if (pendingCreditId > 0) await ReceiptEntryService.UnapproveReceiptEntryAsync(pendingCreditId);
            if (pendingDebitId > 0) await ReceiptEntryService.UnapproveReceiptEntryAsync(pendingDebitId);
        }
        else if (pendingAction == "Delete")
        {
            if (pendingCreditId > 0) await ReceiptEntryService.DeleteReceiptEntryAsync(pendingCreditId);
            if (pendingDebitId > 0) await ReceiptEntryService.DeleteReceiptEntryAsync(pendingDebitId);
        }
        await LoadData();
    }

    private string GetStatusClass(string? status) => status?.ToLower() switch
    {
        "approved" => "badge-approved",
        _ => "badge-unapproved"
    };

    public class ReceiptFilter
    {
        public string? Unit { get; set; }
        public string? VoucherNo { get; set; }
        public string Status { get; set; } = "Unapproved";
        public DateTime? FromDate { get; set; }
        public DateTime? ToDate { get; set; }
    }
}
