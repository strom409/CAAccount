@using BlazorDemo.AbraqAccount.Models
@using BlazorDemo.AbraqAccount.Services.Interfaces
@inject IReceiptEntryService ReceiptEntryService
@inject IJSRuntime JS
@using BlazorDemo.Components.AbraqAccount.Common

<div class="filter-section">
    <div class="filter-group">
        <label>Unit</label>
        <select @bind="filter.Unit">
            <option value="">All Units</option>
            @if (units != null)
            {
                @foreach (var u in units)
                {
                    <option value="@u">@u</option>
                }
            }
        </select>
    </div>
    <div class="filter-group">
        <label>Voucher No</label>
        <input type="text" @bind="filter.VoucherNo" placeholder="Search by Receipt No" />
    </div>
    <div class="filter-group">
        <label>Status</label>
        <select @bind="filter.Status">
            <option value="Unapproved">Unapproved</option>
            <option value="Approved">Approved</option>
            <option value="ALL">All Status</option>
        </select>
    </div>
    <div class="filter-group">
        <label>From Date</label>
        <input type="date" @bind="filter.FromDate" />
    </div>
    <div class="filter-group">
        <label>To Date</label>
        <input type="date" @bind="filter.ToDate" />
    </div>
    <div class="filter-actions">
        <button class="btn-search" @onclick="LoadData">
            <i class="bi bi-search"></i> Search
        </button>
        <button class="btn-clear" @onclick="ClearFilters">Clear</button>
    </div>
</div>

<div class="table-card">
    <div class="table-wrapper">
        <table class="table-notes table-striped">
            <thead>
                <tr>
                    <th>
                        <ColumnFilter Title="Unit" TItem="ReceiptEntryGroupViewModel" TValue="string" Items="originalReceiptGroups" Property="@(x => x.Unit)" OnFilter="@(v => HandleColumnFilter("Unit", v))" Align="left" />
                    </th>
                    <th>
                        <ColumnFilter Title="Voucher No" TItem="ReceiptEntryGroupViewModel" TValue="string" Items="originalReceiptGroups" Property="@(x => x.VoucherNo)" OnFilter="@(v => HandleColumnFilter("VoucherNo", v))" Align="left" />
                    </th>
                    <th>
                        <ColumnFilter Title="Date" TItem="ReceiptEntryGroupViewModel" TValue="string" Items="originalReceiptGroups" Property="@(x => x.ReceiptDate.ToString("dd/MM/yyyy"))" OnFilter="@(v => HandleColumnFilter("Date", v))" Align="left" />
                    </th>

                    <th>
                        <ColumnFilter Title="Entry For" TItem="ReceiptEntryGroupViewModel" TValue="string" Items="originalReceiptGroups" Property="@(x => x.EntryForName ?? "-")" OnFilter="@(v => HandleColumnFilter("EntryForName", v))" Align="left" />
                    </th>
                    <th>
                        <ColumnFilter Title="Credit/Debit" TItem="ReceiptEntryGroupViewModel" TValue="string" Items="originalReceiptGroups" Property="@(x => x.CreditAccountName + " " + x.DebitAccountName)" OnFilter="@(v => HandleColumnFilter("Account", v))" />
                    </th>
                    <th>
                        <ColumnFilter Title="Amount" TItem="ReceiptEntryGroupViewModel" TValue="decimal" Items="originalReceiptGroups" Property="@(x => x.ReceiptAmount)" OnFilter="@(v => HandleColumnFilter("ReceiptAmount", v))" />
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (receiptGroups == null)
                {
                    <tr><td colspan="5" class="text-center">Loading...</td></tr>
                }
                else if (!receiptGroups.Any())
                {
                    <tr><td colspan="5" class="text-center">No receipt entries found.</td></tr>
                }
                else
                {
                    @foreach (var group in receiptGroups)
                    {
                        <tr>
                            <td>@(group.Unit ?? "")</td>
                            <td>
                                <button class="btn-link" @onclick="() => ShowDetails(group.VoucherNo)">
                                    @group.VoucherNo
                                </button>
                            </td>
                            <td>@group.ReceiptDate.ToString("dd/MM/yyyy")</td>
                            <td>@(string.IsNullOrEmpty(group.EntryForName) ? "-" : group.EntryForName)</td>
                            <td>
                                <div class="text-primary">@group.CreditAccountName Cr</div>
                                <div class="text-danger">@group.DebitAccountName Dr</div>
                            </td>
                            <td>@group.ReceiptAmount.ToString("N2")</td>
                            <td>
                                <div class="action-icons">
                                    @if(group.Status == "Approved")
                                    {
                                        <button class="action-icon approved-icon" @onclick="() => ConfirmUnapprove(group.CreditEntryId, group.DebitEntryId)" title="Unapprove">
                                            <i class="bi bi-check-circle-fill"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="action-icon approve-icon" @onclick="() => ConfirmApprove(group.CreditEntryId, group.DebitEntryId)" title="Approve">
                                            <i class="bi bi-hand-thumbs-up"></i>
                                        </button>
                                    }
                                    @if (group.Status != "Approved")
                                    {
                                        <button class="action-icon edit-icon" type="button" @onclick="() => OnEdit.InvokeAsync(group.VoucherNo)" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                    }
                                    <NavLink href="@($"transactions/receipt-entry/details/{group.VoucherNo}")" class="action-icon view-icon" title="View">
                                        <i class="bi bi-eye"></i>
                                    </NavLink>
                                    <button class="action-icon history-icon" type="button" @onclick="() => ShowHistory(group.VoucherNo)" title="History">
                                        <i class="bi bi-info-circle"></i>
                                    </button>
                                    @if (group.Status != "Approved")
                                    {
                                        <button class="action-icon delete-icon" @onclick="() => ConfirmDelete(group.CreditEntryId, group.DebitEntryId)" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="pagination-section">
        <div class="pagination-info">
            <span>Showing @(startRecord) - @(endRecord) of @(totalCount) Display</span>
            <input type="number" @bind="pageSize" min="1" max="100" />
            <button class="btn-go" @onclick="LoadData">Go</button>
        </div>
        <div class="pagination-controls">
            <button class="pagination-btn" @onclick="() => GoToPage(1)" disabled="@(currentPage == 1)">K</button>
            <button class="pagination-btn" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)">&lt;</button>
            <span>Page</span>
            <select @onchange="OnPageChange">
                @for (int i = 1; i <= totalPages; i++)
                {
                    <option value="@i" selected="@(i == currentPage)">@i</option>
                }
            </select>
            <span>of @totalPages</span>
            <button class="pagination-btn" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage >= totalPages)">&gt;</button>
            <button class="pagination-btn" @onclick="() => GoToPage(totalPages)" disabled="@(currentPage >= totalPages)">K</button>
        </div>
    </div>
</div>

<style>
