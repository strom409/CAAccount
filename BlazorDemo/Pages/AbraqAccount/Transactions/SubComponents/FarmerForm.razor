@using BlazorDemo.AbraqAccount.Models
@using BlazorDemo.AbraqAccount.Services.Interfaces
@inject IAgriMasterService AgriService

<div class="transaction-form">
    <div class="form-header">
        <h3 class="form-title">Farmer - @(Id.HasValue ? "Edit" : "Add")</h3>
    </div>

    <EditForm Model="@item" OnValidSubmit="SubmitForm">
        <DataAnnotationsValidator />
        
        <div class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Grower Group <span class="text-danger">*</span></label>
                <InputSelect @bind-Value="item.GroupId" class="form-select">
                    <option value="0">Select Group</option>
                    @if (groups != null)
                    {
                        foreach (var g in groups)
                        {
                            <option value="@g.Id">@g.GroupName</option>
                        }
                    }
                </InputSelect>
            </div>
            
            <div class="col-md-4">
                <label class="form-label">Farmer Name <span class="text-danger">*</span></label>
                <InputText @bind-Value="item.FarmerName" class="form-control" placeholder="Enter Farmer Name" />
            </div>
            
            <div class="col-md-4">
                <label class="form-label">Phone</label>
                <InputText @bind-Value="item.Phone" class="form-control" />
            </div>

            <div class="col-md-4">
                <label class="form-label">Village</label>
                <InputText @bind-Value="item.Village" class="form-control" />
            </div>
        </div>

        <div class="row mt-4">
             <div class="col-12 text-end">
                  <button type="submit" class="btn btn-primary common-btn">Save</button>
                  <button type="button" class="btn btn-secondary common-btn" @onclick="Cancel">Cancel</button>
             </div>
        </div>
    </EditForm>
</div>

@code {
    [Parameter] public int? Id { get; set; }
    [Parameter] public EventCallback OnSaved { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private Farmer item = new();
    private List<GrowerGroup> groups = new();

    protected override async Task OnInitializedAsync()
    {
        groups = await AgriService.GetGrowerGroupsAsync();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (Id.HasValue)
        {
            item = await AgriService.GetFarmerByIdAsync(Id.Value) ?? new();
        }
        else
        {
            item = new Farmer();
        }
    }

    public async Task SubmitForm()
    {
        if (item.GroupId == 0)
        {
            // Validation error could be better handled
            return;
        }

        if (Id.HasValue)
        {
            await AgriService.UpdateFarmerAsync(Id.Value, item);
        }
        else
        {
            await AgriService.CreateFarmerAsync(item);
        }
        await OnSaved.InvokeAsync();
    }

    private async Task Cancel()
    {
        await OnCancel.InvokeAsync();
    }
}
