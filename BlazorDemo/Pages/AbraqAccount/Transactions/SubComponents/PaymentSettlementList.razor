@using BlazorDemo.AbraqAccount.Models
@using BlazorDemo.AbraqAccount.Services.Interfaces
@inject IPaymentSettlementService PaymentSettlementService
@inject IJSRuntime JS
@using BlazorDemo.Components.AbraqAccount.Common

<div class="filter-section">
    <div class="filter-group">
        <label>Unit</label>
        <select @bind="filter.Unit">
            <option value="">All Units</option>
            @if (units != null)
            {
                @foreach (var u in units)
                {
                    <option value="@u">@u</option>
                }
            }
        </select>
    </div>
    <div class="filter-group">
        <label>PA Number</label>
        <input type="text" @bind="filter.PANumber" placeholder="PA Number" />
    </div>
    <div class="filter-group">
        <label>Status</label>
        <select @bind="filter.Status">
            <option value="Unapproved">Unapproved</option>
            <option value="Approved">Approved</option>
            <option value="Deleted">Deleted</option>
        </select>
    </div>
    <div class="filter-group">
        <label>From Date</label>
        <input type="date" @bind="filter.FromDate" />
    </div>
    <div class="filter-group">
        <label>To Date</label>
        <input type="date" @bind="filter.ToDate" />
    </div>
    <div class="filter-actions">
        <button class="btn-search" @onclick="LoadData">
            <i class="bi bi-search"></i> Search
        </button>
        <button class="btn-clear" @onclick="ClearFilters">Clear</button>
    </div>
</div>

<div class="table-card">
    <div class="table-wrapper">
        <table class="table-notes table-striped">
            <thead>
                <tr>
                    <th>
                        <ColumnFilter Title="Unit" TItem="PaymentSettlementGroupViewModel" TValue="string" Items="originalSettlementGroups" Property="@(x => x.Unit)" OnFilter="@(v => HandleColumnFilter("Unit", v))" Align="left" />
                    </th>
                    <th>
                        <ColumnFilter Title="PA. No." TItem="PaymentSettlementGroupViewModel" TValue="string" Items="originalSettlementGroups" Property="@(x => x.PANumber)" OnFilter="@(v => HandleColumnFilter("PANumber", v))" Align="left" />
                    </th>
                    <th>
                        <ColumnFilter Title="Date" TItem="PaymentSettlementGroupViewModel" TValue="string" Items="originalSettlementGroups" Property="@(x => x.SettlementDate.ToString("dd/MM/yyyy"))" OnFilter="@(v => HandleColumnFilter("Date", v))" Align="left" />
                    </th>
                    <th>
                        <ColumnFilter Title="Entry For" TItem="PaymentSettlementGroupViewModel" TValue="string" Items="originalSettlementGroups" Property="@(x => x.EntryForName ?? "-")" OnFilter="@(v => HandleColumnFilter("EntryForName", v))" Align="left" />
                    </th>
                    <th>
                        <ColumnFilter Title="Credit/Debit" TItem="PaymentSettlementGroupViewModel" TValue="string" Items="originalSettlementGroups" Property="@(x => (x.CreditEntry?.AccountName ?? "") + (x.DebitEntry != null ? " / " + x.DebitEntry.AccountName : ""))" OnFilter="@(v => HandleColumnFilter("VendorName", v))" />
                    </th>
                    <th>
                        <ColumnFilter Title="Amount" TItem="PaymentSettlementGroupViewModel" TValue="decimal" Items="originalSettlementGroups" Property="@(x => x.PaymentAmount)" OnFilter="@(v => HandleColumnFilter("PaymentAmount", v))" />
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (settlementGroups == null)
                {
                    <tr><td colspan="8" class="text-center">Loading...</td></tr>
                }
                else if (!settlementGroups.Any())
                {
                    <tr><td colspan="8" class="text-center">No payment settlements found.</td></tr>
                }
                else
                {
                    @foreach (var item in settlementGroups)
                    {
                        <tr>
                            <td>@(item.Unit ?? "")</td>
                            <td>
                                <button class="btn-link" @onclick="() => ShowDetails(item.PANumber)">
                                    @item.PANumber
                                </button>
                            </td>
                            <td>@item.SettlementDate.ToString("dd/MM/yyyy")</td>
                            <td>@(item.EntryForName ?? "-")</td>
                            <td>
                                <div>
                                    @if (!string.IsNullOrEmpty(item.CreditAccountNames))
                                    {
                                        <div class="text-primary">@item.CreditAccountNames (Cr)</div>
                                    }
                                    @if (!string.IsNullOrEmpty(item.DebitAccountNames))
                                    {
                                        <div class="text-danger">@item.DebitAccountNames (Dr)</div>
                                    }
                                </div>
                            </td>
                            <td>@item.PaymentAmount.ToString("N2")</td>
                            <td>
                                <div class="action-icons">
                                    @if (item.ApprovalStatus != "Deleted")
                                    {
                                        @if (item.ApprovalStatus == "Approved")
                                        {
                                            <button class="action-icon approved-icon" @onclick="() => ConfirmUnapprove(item.CreditEntryId > 0 ? item.CreditEntryId : item.DebitEntryId)" title="Unapprove">
                                                <i class="bi bi-check-circle-fill"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="action-icon approve-icon" @onclick="() => ConfirmApprove(item.CreditEntryId > 0 ? item.CreditEntryId : item.DebitEntryId)" title="Approve">
                                                <i class="bi bi-hand-thumbs-up"></i>
                                            </button>
                                        }
                                        
                                        @if (item.CreditEntryId > 0)
                                        {
                                            @if (item.ApprovalStatus != "Approved")
                                            {
                                                <button class="action-icon edit-icon" type="button" @onclick='async () => await OnEdit.InvokeAsync((item.PANumber, item.Unit ?? ""))' title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                            }
                                            <NavLink href="@($"transactions/payment-settlement/details/{item.PANumber}")" class="action-icon view-icon" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </NavLink>
                                        }
                                    }
                                    
                                    <button class="action-icon history-icon" type="button" @onclick="() => ShowHistory(item.PANumber)" title="History">
                                        <i class="bi bi-info-circle"></i>
                                    </button>

                                    @if (item.ApprovalStatus != "Deleted")
                                    {
                                        @if (item.CreditEntryId > 0 || item.DebitEntryId > 0)
                                        {
                                            @if (item.ApprovalStatus != "Approved")
                                            {
                                                <button class="action-icon delete-icon" @onclick="() => ConfirmDelete(item.CreditEntryId > 0 ? item.CreditEntryId : item.DebitEntryId)" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted ms-2">Deleted</span>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="pagination-section">
        <div class="pagination-info">
            <span>Showing @(startRecord) - @(endRecord) of @(totalCount) Display</span>
            <input type="number" @bind="pageSize" min="1" max="100" />
            <button class="btn-go" @onclick="LoadData">Go</button>
        </div>
        <div class="pagination-controls">
            <button class="pagination-btn" @onclick="() => GoToPage(1)" disabled="@(currentPage == 1)">K</button>
            <button class="pagination-btn" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)">&lt;</button>
            <span>Page</span>
            <select @onchange="OnPageChange">
                @for (int i = 1; i <= totalPages; i++)
                {
                    <option value="@i" selected="@(i == currentPage)">@i</option>
                }
            </select>
            <span>of @totalPages</span>
            <button class="pagination-btn" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage >= totalPages)">&gt;</button>
            <button class="pagination-btn" @onclick="() => GoToPage(totalPages)" disabled="@(currentPage >= totalPages)">K</button>
        </div>
    </div>
</div>

