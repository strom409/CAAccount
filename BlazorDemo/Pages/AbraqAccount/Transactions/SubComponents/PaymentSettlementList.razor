<ConfirmationModal @ref="confirmationModal" OnConfirm="HandleConfirmation" />
<TransactionHistoryModal @ref="historyModal" />

@code {
    [Parameter] public EventCallback<(string voucher, string unit)> OnEdit { get; set; }
    private List<PaymentSettlementGroupViewModel>? settlementGroups;
    private List<string> units = new();
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling((double)totalCount / pageSize);
    private int startRecord => (currentPage - 1) * pageSize + 1;
    private int endRecord => Math.Min(currentPage * pageSize, totalCount);

    private SettlementFilter filter = new() { Status = "Unapproved" };

    protected override async Task OnInitializedAsync()
    {
        units = (await PaymentSettlementService.GetUnitNamesAsync()).ToList();
        await LoadData();
    }

    private void FilterLocalData()
    {
        if (originalSettlementGroups == null) return;
        
        var query = originalSettlementGroups.AsEnumerable();

        foreach(var kvp in activeColumnFilters)
        {
             var col = kvp.Key;
             var filterValues = kvp.Value as System.Collections.IEnumerable;
             if (filterValues == null) continue;
             
             query = query.Where(item => {
                 object? val = col switch {
                     "Unit" => item.Unit,
                     "PANumber" => item.PANumber,
                     "Date" => item.SettlementDate.ToString("dd/MM/yyyy"),
                     "EntryForName" => item.EntryForName ?? "-",
                     "VendorName" => (item.CreditEntry?.AccountName ?? "") + (item.DebitEntry != null ? " / " + item.DebitEntry.AccountName : ""),
                     "PaymentAmount" => item.PaymentAmount,
                     "ApprovalStatus" => item.ApprovalStatus,
                     "PaymentStatus" => item.PaymentStatus,
                     _ => null
                 };
                 
                 foreach(var f in filterValues) {
                     if (object.Equals(f, val)) return true;
                 }
                 return false;
             });
        }
        
        settlementGroups = query.ToList();
    }

    private Dictionary<string, object> activeColumnFilters = new();

    private void HandleColumnFilter<T>(string column, List<T> selectedValues)
    {
        if (selectedValues == null || !selectedValues.Any()) 
            activeColumnFilters.Remove(column);
        else 
            activeColumnFilters[column] = selectedValues;

        FilterLocalData();
    }

    private List<PaymentSettlementGroupViewModel> originalSettlementGroups = new();

    private async Task LoadData()
    {
        var result = await PaymentSettlementService.GetSettlementsAsync(
            filter.PANumber,
            filter.FromDate,
            filter.ToDate,
            null, // vendorGroup
            null, // vendorName
            filter.Unit,
            filter.Status,
            null, // paymentStatus
            currentPage,
            pageSize
        );
        originalSettlementGroups = result.groups ?? new List<PaymentSettlementGroupViewModel>();
        settlementGroups = originalSettlementGroups.ToList();
        totalCount = result.totalCount;
        
        if (activeColumnFilters.Any()) FilterLocalData();
    }

    private async Task ClearFilters()
    {
        filter = new() { Status = "Unapproved" };
        currentPage = 1;
        await LoadData();
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            currentPage = page;
            await LoadData();
        }
    }

    private async Task OnPageChange(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int page))
        {
            await GoToPage(page);
        }
    }

    private async Task ShowDetails(string paNumber)
    {
        // Implement modal or navigation
    }

    private async Task ShowHistory(string paNo)
    {
        if (historyModal != null) await historyModal.Show(paNo);
    }

    private TransactionHistoryModal? historyModal;

    private ConfirmationModal? confirmationModal;
    private int pendingId;
    private string pendingAction = "";

    private void ConfirmApprove(int id)
    {
        pendingId = id;
        pendingAction = "Approve";
        confirmationModal?.Show("Approve Settlement", "Are you sure you want to approve this settlement?", "Approve", "btn-success");
    }

    private void ConfirmUnapprove(int id)
    {
        pendingId = id;
        pendingAction = "Unapprove";
        confirmationModal?.Show("Unapprove Settlement", "Are you sure you want to unapprove this settlement?", "Unapprove", "btn-warning");
    }

    private void ConfirmDelete(int id)
    {
        pendingId = id;
        pendingAction = "Delete";
        confirmationModal?.Show("Delete Settlement", "Are you sure you want to delete this settlement?", "Delete", "btn-danger");
    }

    private async Task HandleConfirmation()
    {
        if (pendingAction == "Approve")
        {
            await PaymentSettlementService.ApproveSettlementAsync(pendingId);
        }
        else if (pendingAction == "Unapprove")
        {
            await PaymentSettlementService.UnapproveSettlementAsync(pendingId);
        }
        else if (pendingAction == "Delete")
        {
            await PaymentSettlementService.DeleteSettlementAsync(pendingId);
        }
        await LoadData();
    }

    private string GetApprovalStatusClass(string? status) => status?.ToLower() switch
    {
        "approved" => "badge-approved",
        "pending" => "badge-pending",
        _ => "badge-unapproved"
    };

    public class SettlementFilter
    {
        public string? Unit { get; set; }
        public string? PANumber { get; set; }
        public string Status { get; set; } = "Unapproved";
        public DateTime? FromDate { get; set; }
        public DateTime? ToDate { get; set; }
    }
}
