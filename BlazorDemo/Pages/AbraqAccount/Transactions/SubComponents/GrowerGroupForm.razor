@using BlazorDemo.AbraqAccount.Models
@using BlazorDemo.AbraqAccount.Services.Interfaces
@inject IAgriMasterService AgriService

<div class="transaction-form">
    <div class="form-header">
        <h3 class="form-title">Grower Group - @(Id.HasValue ? "Edit" : "Add")</h3>
    </div>

    <EditForm Model="@item" OnValidSubmit="SubmitForm">
        <DataAnnotationsValidator />
        
        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Group Name <span class="text-danger">*</span></label>
                <InputText @bind-Value="item.GroupName" class="form-control" placeholder="Enter Group Name" />
            </div>
            
            <div class="col-md-3">
                <label class="form-label">Group Type</label>
                <InputSelect @bind-Value="item.GroupType" class="form-select">
                    <option value="">Select Type</option>
                    <option value="FPO">FPO</option>
                    <option value="AGENT">AGENT</option>
                    <option value="FARMER_GROUP">FARMER GROUP</option>
                </InputSelect>
            </div>

            <div class="col-md-3">
                <label class="form-label">Billing Mode</label>
                <InputSelect @bind-Value="item.BillingMode" class="form-select">
                    <option value="">Select Mode</option>
                    <option value="GROUP">GROUP</option>
                    <option value="FARMER">FARMER</option>
                </InputSelect>
            </div>

            <div class="col-md-3">
                <label class="form-label">Contact Person</label>
                <InputText @bind-Value="item.ContactPerson" class="form-control" />
            </div>

            <div class="col-md-3">
                <label class="form-label">Phone</label>
                <InputText @bind-Value="item.Phone" class="form-control" />
            </div>
             <div class="col-md-3">
                <label class="form-label">WhatsApp</label>
                <InputText @bind-Value="item.WhatsApp" class="form-control" />
            </div>

            <div class="col-md-3">
                <label class="form-label">Village</label>
                <InputText @bind-Value="item.Village" class="form-control" />
            </div>
             <div class="col-md-3">
                <label class="form-label">Tehsil</label>
                <InputText @bind-Value="item.Tehsil" class="form-control" />
            </div>
        </div>

        <div class="row mt-4">
             <div class="col-12 text-end">
                  <button type="submit" class="btn btn-primary common-btn">Save</button>
                  <button type="button" class="btn btn-secondary common-btn" @onclick="Cancel">Cancel</button>
             </div>
        </div>
    </EditForm>
</div>

@code {
    [Parameter] public int? Id { get; set; }
    [Parameter] public EventCallback OnSaved { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private GrowerGroup item = new();

    protected override async Task OnParametersSetAsync()
    {
        if (Id.HasValue)
        {
            item = await AgriService.GetGrowerGroupByIdAsync(Id.Value) ?? new();
        }
        else
        {
            item = new GrowerGroup();
        }
    }

    public async Task SubmitForm()
    {
        if (Id.HasValue)
        {
            await AgriService.UpdateGrowerGroupAsync(Id.Value, item);
        }
        else
        {
            await AgriService.CreateGrowerGroupAsync(item);
        }
        await OnSaved.InvokeAsync();
    }

    private async Task Cancel()
    {
        await OnCancel.InvokeAsync();
    }
}
