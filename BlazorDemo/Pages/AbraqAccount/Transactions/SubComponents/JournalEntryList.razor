</style>


<ConfirmationModal @ref="confirmationModal" OnConfirm="HandleConfirmation" />
<TransactionHistoryModal @ref="historyModal" />

@code {
    [Parameter] public EventCallback<string> OnEdit { get; set; }
    private List<GeneralEntryGroupViewModel>? journalGroups;
    private List<string> units = new();
    private string mediatorName = "ASSETS";
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling((double)totalCount / pageSize);
    private int startRecord => (currentPage - 1) * pageSize + 1;
    private int endRecord => Math.Min(currentPage * pageSize, totalCount);

    private JournalFilter filter = new() { Status = "Unapproved" };

    protected override async Task OnInitializedAsync()
    {
        units = (await GeneralEntryService.GetUnitNamesAsync()).ToList();
        mediatorName = (await GeneralEntryService.GetMediatorAccountNameAsync() ?? "ASSETS").Trim();
        await LoadData();
    }

    private Dictionary<string, object> activeColumnFilters = new();

    private void HandleColumnFilter<T>(string column, List<T> selectedValues)
    {
        if (selectedValues == null || !selectedValues.Any()) 
            activeColumnFilters.Remove(column);
        else 
            activeColumnFilters[column] = selectedValues;

        FilterLocalData();
    }

    private List<GeneralEntryGroupViewModel> originalJournalGroups = new();

    private void FilterLocalData()
    {
        if (originalJournalGroups == null) return;
        
        var query = originalJournalGroups.AsEnumerable();

        foreach(var kvp in activeColumnFilters)
        {
             var col = kvp.Key;
             var filterValues = kvp.Value as System.Collections.IEnumerable;
             if (filterValues == null) continue;
             
             query = query.Where(item => {
                 object? val = col switch {
                     "Unit" => item.Unit,
                     "VoucherNo" => item.VoucherNo,
                     "Date" => item.Date.ToString("dd/MM/yyyy"),
                     "EntryForName" => item.Entries.FirstOrDefault()?.EntryForName ?? "-",
                     "CreditAndDebit" => GetDisplayAccounts(item.Entries, true) + " " + GetDisplayAccounts(item.Entries, false),
                     "Amount" => item.TotalDebit,
                     "Status" => item.Status,
                     _ => null
                 };
                 
                 foreach(var f in filterValues) {
                     if (object.Equals(f, val)) return true;
                 }
                 return false;
             });
        }
        
        journalGroups = query.ToList();
    }

    private async Task LoadData()
    {
        try
        {
            var result = await GeneralEntryService.GetJournalGroupsAsync(
                filter.Unit,
                filter.NoteNo,
                filter.Status,
                filter.FromDate,
                filter.ToDate,
                currentPage,
                pageSize
            );
            originalJournalGroups = result.groups ?? new List<GeneralEntryGroupViewModel>();
            journalGroups = originalJournalGroups.ToList();
            totalCount = result.totalCount;
            
            if (activeColumnFilters.Any()) FilterLocalData();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading Journal Groups: {ex.Message}");
            journalGroups = new List<GeneralEntryGroupViewModel>();
            originalJournalGroups = new List<GeneralEntryGroupViewModel>();
        }
    }

    private string GetDisplayAccounts(List<GeneralEntry> entries, bool isCredit)
    {
        var accounts = entries
            .Select(e => isCredit ? e.CreditAccountName?.Trim() : e.DebitAccountName?.Trim())
            .Where(n => !string.IsNullOrEmpty(n) && 
                       !n.Equals("N/A", StringComparison.OrdinalIgnoreCase) && 
                       !n.Equals("Default", StringComparison.OrdinalIgnoreCase) && 
                       !n.Equals(mediatorName, StringComparison.OrdinalIgnoreCase))
            .Distinct();

        var result = string.Join(", ", accounts);
        return string.IsNullOrEmpty(result) ? "-" : result;
    }

    private async Task ClearFilters()
    {
        filter = new() { Status = "Unapproved" };
        currentPage = 1;
        await LoadData();
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            currentPage = page;
            await LoadData();
        }
    }

    private async Task OnPageChange(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int page))
        {
            await GoToPage(page);
        }
    }

    private async Task ShowDetails(string voucherNo)
    {
        // Implement modal or navigation
    }

    private async Task ShowHistory(string voucherNo)
    {
        if (historyModal != null) await historyModal.Show(voucherNo);
    }

    private TransactionHistoryModal? historyModal;

    private ConfirmationModal? confirmationModal;
    private string pendingVoucherNo = "";
    private string pendingAction = "";

    private void ConfirmApprove(string voucherNo)
    {
        pendingVoucherNo = voucherNo;
        pendingAction = "Approve";
        confirmationModal?.Show("Approve Journal Entry", "Are you sure you want to approve this journal entry?", "Approve", "btn-success");
    }

    private void ConfirmUnapprove(string voucherNo)
    {
        pendingVoucherNo = voucherNo;
        pendingAction = "Unapprove";
        confirmationModal?.Show("Unapprove Journal Entry", "Are you sure you want to unapprove this journal entry?", "Unapprove", "btn-warning");
    }

    private void ConfirmDelete(string voucherNo)
    {
        pendingVoucherNo = voucherNo;
        pendingAction = "Delete";
        confirmationModal?.Show("Delete Journal Entry", "Are you sure you want to delete this journal entry?", "Delete", "btn-danger");
    }

    private async Task HandleConfirmation()
    {
        var entries = await GeneralEntryService.GetVoucherEntriesAsync(pendingVoucherNo);
        foreach (var entry in entries)
        {
            if (pendingAction == "Approve")
            {
                await GeneralEntryService.ApproveEntryAsync(entry.Id);
            }
            else if (pendingAction == "Unapprove")
            {
                await GeneralEntryService.UnapproveEntryAsync(entry.Id);
            }
            else if (pendingAction == "Delete")
            {
                await GeneralEntryService.DeleteEntryAsync(entry.Id);
            }
        }
        await LoadData();
    }

    private string GetStatusClass(string? status) => status?.ToLower() switch
    {
        "approved" => "badge-approved",
        _ => "badge-unapproved"
    };

    public class JournalFilter
    {
        public string? Unit { get; set; }
        public string? NoteNo { get; set; }
        public string Status { get; set; } = "Unapproved";
        public DateTime? FromDate { get; set; }
        public DateTime? ToDate { get; set; }
    }
}
