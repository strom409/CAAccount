@using BlazorDemo.AbraqAccount.Models
@using BlazorDemo.AbraqAccount.Services.Interfaces
@inject IGeneralEntryService GeneralEntryService
@inject IJSRuntime JS
@using BlazorDemo.Components.AbraqAccount.Common

<div class="filter-section">
    <div class="filter-group">
        <label>Unit</label>
        <select @bind="filter.Unit">
            <option value="">All Units</option>
            @if (units != null)
            {
                @foreach (var u in units)
                {
                    <option value="@u">@u</option>
                }
            }
        </select>
    </div>
    <div class="filter-group">
        <label>Journal Entry No</label>
        <input type="text" @bind="filter.NoteNo" placeholder="Search by Journal No" />
    </div>
    <div class="filter-group">
        <label>Status</label>
        <select @bind="filter.Status">
            <option value="Unapproved">Unapproved</option>
            <option value="Approved">Approved</option>
            <option value="Deleted">Deleted</option>
        </select>
    </div>
    <div class="filter-group">
        <label>From Date</label>
        <input type="date" @bind="filter.FromDate" />
    </div>
    <div class="filter-group">
        <label>To Date</label>
        <input type="date" @bind="filter.ToDate" />
    </div>
    <div class="filter-actions">
        <button class="btn-search" @onclick="LoadData">
            <i class="bi bi-search"></i> Search
        </button>
        <button class="btn-clear" @onclick="ClearFilters">Clear</button>
    </div>
</div>

<div class="table-card">
    <div class="table-wrapper">
        <table class="table-notes table-striped">
            <thead>
                <tr>
                    <th>
                        <ColumnFilter Title="Unit" TItem="GeneralEntryGroupViewModel" TValue="string" Items="originalJournalGroups" Property="@(x => x.Unit)" OnFilter="@(v => HandleColumnFilter("Unit", v))" Align="left" />
                    </th>
                    <th>
                        <ColumnFilter Title="Journal No" TItem="GeneralEntryGroupViewModel" TValue="string" Items="originalJournalGroups" Property="@(x => x.VoucherNo)" OnFilter="@(v => HandleColumnFilter("VoucherNo", v))" Align="left" />
                    </th>
                    <th>
                        <ColumnFilter Title="Date" TItem="GeneralEntryGroupViewModel" TValue="string" Items="originalJournalGroups" Property="@(x => x.Date.ToString("dd/MM/yyyy"))" OnFilter="@(v => HandleColumnFilter("Date", v))" Align="left" />
                    </th>
                    <th>
                        <ColumnFilter Title="Entry For" TItem="GeneralEntryGroupViewModel" TValue="string" Items="originalJournalGroups" Property="@(x => x.Entries.FirstOrDefault()?.EntryForName ?? "-")" OnFilter="@(v => HandleColumnFilter("EntryForName", v))" Align="left" />
                    </th>
                    <th>
                        <ColumnFilter Title="Credit and Debit" TItem="GeneralEntryGroupViewModel" TValue="string" Items="originalJournalGroups" Property="@(x => GetDisplayAccounts(x.Entries, true) + " " + GetDisplayAccounts(x.Entries, false))" OnFilter="@(v => HandleColumnFilter("CreditAndDebit", v))" />
                    </th>
                    <th>
                        <ColumnFilter Title="Amount" TItem="GeneralEntryGroupViewModel" TValue="decimal" Items="originalJournalGroups" Property="@(x => x.TotalDebit)" OnFilter="@(v => HandleColumnFilter("Amount", v))" />
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (journalGroups == null)
                {
                    <tr><td colspan="7" class="text-center">Loading...</td></tr>
                }
                else if (!journalGroups.Any())
                {
                    <tr><td colspan="7" class="text-center">No journal entries found.</td></tr>
                }
                else
                {
                    @foreach (var group in journalGroups)
                    {
                        var firstEntry = group.Entries.FirstOrDefault();
                        var debitAccounts = GetDisplayAccounts(group.Entries, isCredit: false);
                        var creditAccounts = GetDisplayAccounts(group.Entries, isCredit: true);

                        <tr>
                            <td>@(group.Unit ?? "")</td>
                            <td>
                                <button class="btn-link" @onclick="() => ShowDetails(group.VoucherNo)">
                                    @group.VoucherNo
                                </button>
                            </td>
                            <td>@group.Date.ToString("dd/MM/yyyy")</td>
                            <td>@(firstEntry?.EntryForName ?? "-")</td>
                            <td>
                                <div>
                                    @if (!string.IsNullOrEmpty(creditAccounts) && creditAccounts != "-")
                                    {
                                        <div class="text-primary">@creditAccounts (Cr)</div>
                                    }
                                    @if (!string.IsNullOrEmpty(debitAccounts) && debitAccounts != "-")
                                    {
                                        <div class="text-danger">@debitAccounts (Dr)</div>
                                    }
                                </div>
                            </td>
                            <td>@group.TotalDebit.ToString("N2")</td>
                            <td>
                                <div class="action-icons">
                                    @if (group.Status != "Deleted")
                                    {
                                        @if(group.Status == "Approved")
                                        {
                                            <button class="action-icon approved-icon" @onclick="() => ConfirmUnapprove(group.VoucherNo)" title="Unapprove">
                                                <i class="bi bi-check-circle-fill"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="action-icon approve-icon" @onclick="() => ConfirmApprove(group.VoucherNo)" title="Approve">
                                                <i class="bi bi-hand-thumbs-up"></i>
                                            </button>
                                        }
                                        
                                        @if (group.Status != "Approved")
                                        {
                                            <button class="action-icon edit-icon" type="button" @onclick="() => OnEdit.InvokeAsync(group.VoucherNo)" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                        }
                                        <NavLink href="@($"transactions/general-entry/details/{group.VoucherNo}")" class="action-icon view-icon" title="View">
                                            <i class="bi bi-eye"></i>
                                        </NavLink>
                                        <button class="action-icon history-icon" type="button" @onclick="() => ShowHistory(group.VoucherNo)" title="History">
                                            <i class="bi bi-info-circle"></i>
                                        </button>
                                        @if (group.Status != "Approved")
                                        {
                                            <button class="action-icon delete-icon" @onclick="() => ConfirmDelete(group.VoucherNo)" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Deleted</span>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="pagination-section">
        <div class="pagination-info">
            <span>Showing @(startRecord) - @(endRecord) of @(totalCount) Display</span>
            <input type="number" @bind="pageSize" min="1" max="100" />
            <button class="btn-go" @onclick="LoadData">Go</button>
        </div>
        <div class="pagination-controls">
            <button class="pagination-btn" @onclick="() => GoToPage(1)" disabled="@(currentPage == 1)">K</button>
            <button class="pagination-btn" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)">&lt;</button>
            <span>Page</span>
            <select @onchange="OnPageChange">
                @for (int i = 1; i <= totalPages; i++)
                {
                    <option value="@i" selected="@(i == currentPage)">@i</option>
                }
            </select>
            <span>of @totalPages</span>
            <button class="pagination-btn" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage >= totalPages)">&gt;</button>
            <button class="pagination-btn" @onclick="() => GoToPage(totalPages)" disabled="@(currentPage >= totalPages)">K</button>
        </div>
    </div>
</div>

<style>
