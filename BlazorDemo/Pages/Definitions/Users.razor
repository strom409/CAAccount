                    <a title="Delete User" class="fa fa-trash text-red" @onclick="@(() => DeleteGrower(((CompanyModel)context.DataItem).Userid))" style="cursor: pointer;"></a>
                    <a title="View User" class="oi oi-eye" @onclick="@(() => ViewGrower(((CompanyModel)context.DataItem).Userid))" style="cursor: pointer;"></a>
                    <a title="Change Password" class="oi oi-document" @onclick="@(() => AddGrowerAgreement(((CompanyModel)context.DataItem).Userid))" style="cursor: pointer;"></a>
                  
                </CellDisplayTemplate>
            </DxGridCommandColumn>



