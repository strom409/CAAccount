                    </div>
                    <div class="mobile-col mobile-col-sm-6">
                        <label class="mobile-label">Crate Issue</label>
                        <InputNumber @bind-Value="company.CrateIssue"
                                   class="form-control mobile-form-control"
                                   disabled />
                    </div>
                    <div class="mobile-col mobile-col-sm-6">
                        <label class="mobile-label">Crate Receive</label>
                        <InputNumber @bind-Value="company.CrateReceive"
                                   class="form-control mobile-form-control"
                                   disabled />
                    </div>
                    <div class="mobile-col mobile-col-sm-6">
                        <label class="mobile-label">Empty Receive</label>
                        <InputNumber @bind-Value="company.EmptyReceive"
                                   class="form-control mobile-form-control"
                                   disabled />
                    </div>
                    <div class="mobile-col mobile-col-sm-6">
                        <label class="mobile-label">Crate Available</label>
                        <InputNumber @bind-Value="company.CrateAvailable"
                                   class="form-control mobile-form-control"
                                   disabled />
                    </div>
                }
            </div>
        </div>
    }
    
    <!-- Data Grid with Mobile Optimization -->
    <div class="mobile-grid-container">
        <div class="swipe-hint mobile-only">
            <i class="fa fa-arrows-h"></i> Swipe horizontally to view all columns
        </div>
        
        <DxGrid Data="@GetPackingStock" 
                CssClass="mobile-grid"
                ShowSearchBox="true"
                PageSize="20"
                PageSizeSelectorVisible="true"
                PageSizeSelectorItems="@(new int[] {10, 20, 50, 100})"
                FilterMenuButtonDisplayMode="GridFilterMenuButtonDisplayMode.Always"
                TextWrapEnabled="true">
            
            <ToolbarTemplate>
                <div class="d-flex justify-content-between align-items-center w-100">
                    <span class="fw-bold" style="font-size:16px;">Dispatch Items</span>
                    <button class="btn mobile-btn-sm" 
                            style="background-color:#5A5E60; color:white;"
                            @onclick="SaveLot">
                        <i class="fa fa-save"></i> Save
                    </button>
                </div>
            </ToolbarTemplate>
            
            <Columns>
                <!-- Select Checkbox -->
                <DxGridDataColumn FieldName="IsSelected" Caption="Sel" Width="50px">
                    <CellDisplayTemplate Context="cellData">
                        @{
                            var item = (CompanyModel)cellData.DataItem;
                            var isDisabled = item.Packingbalance == 0;
                        }
                        <input type="checkbox"
                               class="mobile-checkbox"
                               checked="@item.IsSelected"
                               disabled="@isDisabled"
                               @onchange="(e) => OnCheckboxChanged(e, item)"
                               style="@(isDisabled ? "opacity:0.5;" : "")" />
                    </CellDisplayTemplate>
                </DxGridDataColumn>
                
                <!-- Pallet No -->
                <DxGridDataColumn FieldName="@nameof(companyModel.PalletName)" 
                                Caption="Pallet" 
                                Width="80px"
                                Visible="false" />
                
                <!-- Packing Order No -->
                <DxGridDataColumn FieldName="@nameof(companyModel.PackingOrderIrn)" 
                                Caption="Order No" 
                                Width="120px" />
                
                <!-- Party -->
                <DxGridDataColumn FieldName="@nameof(companyModel.GrowerGroupName)" 
                                Caption="Party" 
                                Width="150px" />
                
                <!-- Packing Qty -->
                <DxGridDataColumn FieldName="@nameof(companyModel.PackingQty)" 
                                Caption="Pkg Qty" 
                                Width="80px" />
                
                <!-- Dispatch Qty (Editable) -->
                <DxGridDataColumn FieldName="@nameof(companyModel.DispatchQty)" 
                                Caption="Dispatch Qty" 
                                Width="100px">
                    <CellDisplayTemplate Context="cellData">
                        @{
                            var item = (CompanyModel)cellData.DataItem;
                        }
                        <input type="number"
                               class="mobile-number-input"
                               value="@item.DispatchQty"
                               @oninput="async (e) => await OnOrderQtyChanged(item, e)"
                               min="0"
                               max="@item.Packingbalance"
                               style="width:100%;" />
                    </CellDisplayTemplate>
                </DxGridDataColumn>
                
                <!-- Available Qty -->
                <DxGridDataColumn FieldName="@nameof(companyModel.Packingbalance)" 
                                Caption="Available" 
                                Width="90px" />
                
                <!-- Recipe Name -->
                <DxGridDataColumn FieldName="@nameof(companyModel.ReceipeName)" 
                                Caption="Recipe" 
                                Width="120px" />
                
                <!-- Marka -->
                <DxGridDataColumn FieldName="@nameof(companyModel.ReceipeMarka)" 
                                Caption="Marka" 
                                Width="70px" />
                
                <!-- Grade -->
                <DxGridDataColumn FieldName="@nameof(companyModel.ReceipeGrade)" 
                                Caption="Grade" 
                                Width="70px" />
                
                <!-- Variety -->
                <DxGridDataColumn FieldName="@nameof(companyModel.VarietyId)" 
                                Caption="Variety" 
                                Width="100px" />
                
                <!-- User -->
                <DxGridDataColumn FieldName="@nameof(companyModel.UserName)" 
                                Caption="User" 
                                Width="90px" />
                
                <!-- Location -->
                <DxGridDataColumn FieldName="@nameof(companyModel.ReceipeLocation)" 
                                Caption="Location" 
                                Width="100px" />
            </Columns>
            
            <TotalSummary>
                <DxGridSummaryItem SummaryType="GridSummaryItemType.Sum" 
                                 FieldName="@nameof(companyModel.Packingbalance)" />
                <DxGridSummaryItem SummaryType="GridSummaryItemType.Sum" 
                                 FieldName="@nameof(companyModel.PackingQty)" />
            </TotalSummary>
        </DxGrid>
    </div>
</div>

