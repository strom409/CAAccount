        if (string.IsNullOrWhiteSpace(input))
            return null;

        var match = Regex.Match(input, @"^0*(\d+)-");
        if (!match.Success)
            return null;

        if (int.TryParse(match.Groups[1].Value, out int result))
            return result;

        return null;
    }




