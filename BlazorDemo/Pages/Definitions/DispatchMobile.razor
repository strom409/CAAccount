<!-- Main Content with Mobile Scroll -->
<div class="container-fluid mobile-scroll" style="padding-bottom: 80px;">
    
    <!-- Search Filters Card -->
    <div class="mobile-card">
        <div class="mobile-row">
            <!-- From Date -->
            <div class="mobile-col mobile-col-sm-6">
                <label class="mobile-label">From Date<span style="color:red">*</span></label>
                <InputDate @bind-Value="@companyModel.PackingOrderDatefrom" 
                         class="form-control mobile-form-control" 
                         style="width:100%" />
            </div>
            
            <!-- To Date -->
            <div class="mobile-col mobile-col-sm-6">
                <label class="mobile-label">To Date<span style="color:red">*</span></label>
                <InputDate @bind-Value="@companyModel.PackingOrderDateto" 
                         class="form-control mobile-form-control" 
                         style="width:100%" />
            </div>
            
            <!-- Packing Order No -->
            <div class="mobile-col mobile-col-sm-6">
                <label class="mobile-label">Packing Order No</label>
                <SfAutoComplete TValue="string" TItem="CompanyModel" 
                              @bind-Value="EditModel.PackingOrderIrn"
                              Placeholder="Select order"
                              DataSource="@PackingOrderist"
                              CssClass="mobile-form-control">
                    <AutoCompleteFieldSettings Value="PackingOrderIrn" />
                </SfAutoComplete>
            </div>
            
            <!-- Status -->
            <div class="mobile-col mobile-col-sm-6">
                <label class="mobile-label">Status</label>
                <select class="form-select mobile-select"
                        @bind="EditModel.PackingOrderStatus">
                    <option value="">All</option>
                    <option value="Pending">Pending</option>
                    <option value="Complete">Complete</option>
                </select>
            </div>
            
            <!-- Location -->
            <div class="mobile-col mobile-col-sm-6">
                <label class="mobile-label">Location</label>
                <SfAutoComplete TValue="string" TItem="CompanyModel" 
                              @bind-Value="EditModel.ReceipeLocation"
                              Placeholder="Select location"
                              DataSource="@GetallLocation"
                              CssClass="mobile-form-control">
                    <AutoCompleteFieldSettings Value="Templocation" />
                </SfAutoComplete>
            </div>
            
            <!-- Action Buttons -->
            <div class="mobile-col mobile-col-sm-6" style="display:flex; align-items:flex-end;">
                <div style="display:flex; gap:10px; width:100%;">
                    <button class="btn mobile-btn" 
                            style="background-color:#5A5E60; color:white; flex:1;"
                            @onclick="SearchLots">
                        <i class="fa fa-search"></i> Search
                    </button>
                    <button class="btn mobile-btn" 
                            style="background-color:lightgrey; color:black; flex:1;"
                            @onclick="ClearParam">
                        Clear
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Crate Analysis (Conditional) -->
    @if (TrickCrateAnalysis)
    {
        <div class="mobile-card">
            <h6 style="margin-bottom:15px;">Crate Analysis</h6>
            <div class="mobile-row">
                @foreach (var company in GetCrateAnalysis)
                {
                    <div class="mobile-col mobile-col-sm-6">
                        <label class="mobile-label">Crate Agreement</label>
                        <InputNumber @bind-Value="company.CrateAgreement"
