          >

    <Columns>
            <DxGridDataColumn FieldName=@nameof(companyModel.GrowerGroupName) Caption="Group" Width="17%" />
            <DxGridDataColumn FieldName=@nameof(companyModel.SubGrowerId) DisplayFormat="F0" Caption="Code" Width="10%" />
            <DxGridDataColumn FieldName=@nameof(companyModel.GrowerName) Caption="Name" Width="17%" />
            <DxGridDataColumn FieldName=@nameof(companyModel.GrowerAddress) Caption="Address" Width="17%" />
            <DxGridDataColumn FieldName=@nameof(companyModel.GrowerCrateissue) Caption="Crate Issue" Width="15%" />

            <DxGridDataColumn FieldName="@nameof(companyModel.GrowerRetAcitve)" Caption="Status" Width="10%">
                <CellDisplayTemplate Context="cellData">
                    @{
                        var status = cellData.Value?.ToString();
                        var iconClass = status switch
                        {
                            "True" => "oi oi-circle-check text-success",
                            "true" => "oi oi-x text-danger",
                            "False" => "oi oi oi-x text-danger",
                            _ => "oi oi-question-mark text-secondary"
                        };
                        var SubGrowerId = ((CompanyModel)cellData.DataItem).SubGrowerId;
                    }
                    <span class="@iconClass"
                          title="Click to change status"
                          style="cursor: pointer;"
                          @onclick="() => ShowConfirmDialog(SubGrowerId)">
                    </span>
               
                
                
                </CellDisplayTemplate>
            </DxGridDataColumn>


            <DxGridCommandColumn>
                <HeaderTemplate>
                   <strong>Actions</strong>
                   @* <a class="oi oi-action"  style="text-decoration: none;" href="javascript:void(0);"></a> *@
                </HeaderTemplate>
                <CellDisplayTemplate>
                   

                    <a class="oi oi-pencil" title="Edit Grower" @onclick="@(() => EditGrower(((CompanyModel)context.DataItem).SubGrowerId))"
                       style="cursor: pointer; cursor: pointer;"></a>

                 
<a class="fa fa-trash" title="Delete Grower" @onclick="@(() => DeleteGrower(((CompanyModel)context.DataItem).SubGrowerId))" style="cursor: pointer;"></a>

                    
                    <a class="oi oi-eye" title="View Grower" @onclick="@(() => ViewGrower(((CompanyModel)context.DataItem).SubGrowerId))" style="cursor: pointer;"></a>
                    <a class="oi oi-plus" title="Add Grower" @onclick="@(() => AddGrower(((CompanyModel)context.DataItem).SubGrowerId))" style="cursor: pointer;"></a>
                 
                </CellDisplayTemplate>
            </DxGridCommandColumn>






