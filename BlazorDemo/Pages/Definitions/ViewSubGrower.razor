<PageTitle>View Sub Grower</PageTitle>

<div class="row g-4">
    <!-- Left Form (Single Column) -->
    <h6><strong>Grower Details</strong></h6>

    <div class="d-flex justify-content-between align-items-center p-3 bg-light border-bottom">

        
        <button class="btn btn-primary btn-sm" @onclick="AddGrowerPage">Add</button>
