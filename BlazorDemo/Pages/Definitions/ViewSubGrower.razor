    </div>
</div>
<div class="d-flex justify-content-end gap-1">
    <!-- gap-3 = 1rem (~16px) spacing -->

    <button @onclick="GoBack" class="btn btn-primary">
        <i class="fa fa-arrow-left"></i>
    </button>

</div>


